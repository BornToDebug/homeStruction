<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hat4">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainScreen">

        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/temperature"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/temperature_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#00ffff"
                        android:textSize="18sp"
                        tools:text="no data" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/humidity"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/humidity"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/humidity_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#00ffff"
                        android:textSize="18sp"
                        tools:text="no data" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/luminosity"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/luminosity"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/luminosity_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#00ffff"
                        android:textSize="18sp"
                        tools:text="no data" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/multimedia"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/music_player"
                        android:textAlignment="center"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/now_playing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/now_playing"
                        android:textColor="#00ffff"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center_horizontal">

                        <ImageButton
                            android:id="@+id/songs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/song_button"
                            android:src="@drawable/songs" />

                        <ImageButton
                            android:id="@+id/previous"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/previous_button"
                            android:src="@drawable/previous" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/play"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/play_button"
                                android:src="@drawable/play" />

                            <ImageButton
                                android:id="@+id/pause"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/play"
                                android:layout_centerHorizontal="true"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/pause_button"
                                android:src="@drawable/pause"
                                android:visibility="invisible" />

                        </RelativeLayout>

                        <ImageButton
                            android:id="@+id/next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/next_button"
                            android:src="@drawable/next" />

                        <ImageButton
                            android:id="@+id/shuffle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/shuffle_button"
                            android:src="@drawable/shuffle" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:text="@string/volume"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <SeekBar
                        android:id="@+id/seek_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="45dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginStart="70dp"
                        android:textColorSecondaryInverseNoDisable="@color/colorAccent"
                        android:theme="@style/ScrollBarTheme" />

                    <TextView
                        android:id="@+id/volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/windows"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/window"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/window_open"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/window_open"
                        android:src="@drawable/window_open"
                        android:textColor="#00ffff"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/window_closed"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/window_closed"
                        android:src="@drawable/window_closed"
                        android:textColor="#00ffff"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/window_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/error"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/door"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:id="@+id/ocText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="@string/door"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/closed"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp">

                        <ImageView
                            android:id="@+id/door_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:contentDescription="@string/door_locked"
                            android:src="@drawable/door_closed"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/door_open"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:contentDescription="@string/door_unlocked"
                            android:src="@drawable/door_open"
                            android:visibility="visible" />

                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/doors"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:id="@+id/doors_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="Door locked"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/conf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginRight="70dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/lock"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/door_locked"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:contentDescription="@string/door_locked"
                            android:src="@drawable/locked"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/door_unlocked"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:contentDescription="@string/door_unlocked"
                            android:src="@drawable/unlocked"
                            android:visibility="visible" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/chandelier"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/chandelier"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <Switch
                        android:id="@+id/chandelier_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nightlight"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/nightlight"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <Switch
                        android:id="@+id/nightlight_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/vecof"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/vecof"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                    <Switch
                        android:id="@+id/vecof_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#00ffff"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/border_unpressed">

                    <RelativeLayout
                        android:id="@+id/alarm"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/ripple_small"
                            android:text="@string/alarm"
                            android:textColor="#00ffff"
                            android:textSize="18sp" />

                        <Switch
                            android:id="@+id/alarm_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:textColor="#00ffff"
                            android:textOff=""
                            android:textOn=""
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="55dp"
                        android:gravity="center_horizontal"
                        android:text="@string/select_day"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="80dp"
                        android:gravity="center_horizontal">

                        <ToggleButton
                            android:id="@+id/monday"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/button_toggle"
                            android:textAllCaps="false"
                            android:textColor="@color/toggle_color"
                            android:textOff="@string/monday"
                            android:textOn="@string/monday"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/tuesday"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/button_toggle"
                            android:textAllCaps="false"
                            android:textColor="@color/toggle_color"
                            android:textOff="@string/tuesday"
                            android:textOn="@string/tuesday"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/wednesday"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/button_toggle"
                            android:textAllCaps="false"
                            android:textColor="@color/toggle_color"
                            android:textOff="@string/wednesday"
                            android:textOn="@string/wednesday"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/thursday"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/button_toggle"
                            android:textAllCaps="false"
                            android:textColor="@color/toggle_color"
                            android:textOff="@string/thursday"
                            android:textOn="@string/thursday"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/friday"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/button_toggle"
                            android:textAllCaps="false"
                            android:textColor="@color/toggle_color"
                            android:textOff="@string/friday"
                            android:textOn="@string/friday"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/saturday"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/button_toggle"
                            android:textAllCaps="false"
                            android:textColor="@color/toggle_color"
                            android:textOff="@string/saturday"
                            android:textOn="@string/saturday"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/sunday"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/button_toggle"
                            android:textAllCaps="false"
                            android:textColor="@color/toggle_color"
                            android:textOff="@string/sunday"
                            android:textOn="@string/sunday"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:text="@string/coffee_checkbox"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.SwipeRefreshLayout>